extends layout

block content
    nav.navbar.navbar-inverse( role="navigation" )
        .navbar-header
            button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar",background-color= '#333')
                span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
            a.navbar-brand(href="/course_enroll",active='true') Home
            a.navbar-brand(href="/student_login") Sign Out
    h1
    p
        .main.container
            .row
                .col-md-6.col-md-offset-3
                h4.display-4.m-b-2 Enroll Courses
                .image-block
                    img.className#IdName(src="/images/enroll.png" alt="Image Title")
                 table.table.table-inverse(border='2',width='100')
                        thead
                            tr(bgcolor='#33cc33')
                                th Course
                                th Description
                                th Available Seats Count
                                th
                        tbody
                            each c in courseList
                                tr(bgcolor='#ff1a1a')
                                    td=c.cname
                                    td=c.duration
                                    td=c.seats
                                    td
                                        button.btn.btn-success(type='submit',onclick='window.location.href =\'/course_enroll/#{c._id}\'') Enroll