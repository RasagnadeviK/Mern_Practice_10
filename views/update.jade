extends layout

block content
    nav.navbar.navbar-inverse( role="navigation" )
        .navbar-header
            button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar",background-color= '#333')
                span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
            a.navbar-brand(href="/student_course/update/#{updatingCourse._id}",active='true') Home  
            a.navbar-brand(href="/student_login") Sign Out
    h1
    p
        .main.container
            .row
                .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Update Course
                .image-block 
                img.className#IdName(src="/images/update.gif" alt="Image Title")
                form(method = "POST" , action="/student_course/update/#{updatingCourse._id}" ,name="updatecourse") 
                    div(style="margin-bottom:50px;").col-sm-6.col-sm-offset-3
                        div.form-group
                            font(size='4') Course Name: #{updatingCourse.cname}
                        div.form-group
                            label(for='duration') Duration:
                            input#duration.form-control(type='text', placeholder = 'Duration', name ='duration',required='true')
                        div.form-group
                            label(for='start') Start Date:
                            input#start.form-control(type='text', placeholder = 'Start Date', name ='start',required='true')
                        div.form-group
                            label(for='Lecturer') Lecturer Name:
                            input#Lecturer.form-control(type='text', placeholder = 'Lecturer Name', name ='Lecturer',required='true')
                        div.form-group
                            label(for='seats') No of Seats:
                            input#seats.form-control(type='number', placeholder = 'No of Seats Available', name ='seats',required='true')
                        div.form-group
                            button.btn.btn-primary(type ='submit') Update Course

                    div.footer