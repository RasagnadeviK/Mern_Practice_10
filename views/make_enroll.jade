extends layout

block content
    nav.navbar.navbar-inverse( role="navigation" )
        .navbar-header
            button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar",background-color= '#333')
                span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
            a.navbar-brand(href="/course_enroll/#{enrollingCourse._id}",active='true') Home
            a.navbar-brand(href="/student_login") Sign Out
    h1
    p
        .main.container
            .row
                .col-md-6.col-md-offset-3
                h4.display-4.m-b-2 Enroll
                .image-block
                    img.className#IdName(src="/images/enrollm.png" alt="Image Title")
                form(method = "POST" , action="/course_enroll/#{enrollingCourse._id}",name="enrollcourse")
                    div(style="margin-bottom:50px;").col-sm-6.col-sm-offset-3
                        div.form-group
                            font(size='4') Course Name: #{enrollingCourse.cname}
                        div.form-group
                            font(size='4') Duration: #{enrollingCourse.duration}
                        div.form-group
                            font(size='4') Available seats count: #{enrollingCourse.seats}
                        div.form-group
                            font(size='4') No of seats you want to enroll:
                            input#password.form-control(type='number', placeholder = 'Enrolling Seats Count', name ='enrollingSeats',required='true')
                        div.form-group
                            button.btn.btn-primary(type ='submit',onClick='return confirm(\'Are you sure you want to enroll for this course?\');') Enroll
                    div.footer